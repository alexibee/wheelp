<div class="container">
  <% if @message %>
    <h3> <%= @message %> </h3>
    <%= link_to "Find an expert", services_path, class: "link" %>
  <% else %>
    <div class="cards-grid">
      <% @bookings.each do |booking| %>
        <% @service = booking.service %>
        <div class="booking-card justify-between sm:flex">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="info">
          <h2><%= link_to (booking.vehicle_brand + " " + booking.vehicle_model + " " + booking.vehicle_year), service_booking_path(@service, booking), class: "link" %></h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
          <p> üìç <%= booking.vehicle_address  %> </p>
          </div>
        </div>
      <% end %>
      <%= link_to "Find an expert", services_path, class: "btn" %>
    </div>
  <% end %>
