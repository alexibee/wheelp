<div class="container">

  <% if @message %>
    <%= link_to "Create a service", new_service_path, class: "grey-button" %>
    <h3> <%= @message %> </h3>
  <% else %>
  <!-- add different sections for pending/confirmed requests and remove declined -->
    <h2> Evaluation requests: </h2>

    <% @bookings.each do |booking| %>
        <%= render "shared/booking_dashboard_card_expert", booking: booking %>
    <% end %>
  <% end %>
</div>
