<% if @message %>
  <h3> <%= @message %> </h3>
  <%= link_to "Find an expert", services_path, class: "link" %>
<% else %>
<h2> Pending Bookings </h2>
  <% @bookings.each do |booking| %>
    <% if booking.state == 0 %>
     <%= render "booking_dashboard_card_customer", booking: booking %>
    <% end %>
  <% end %>

<h2> Evaluated Bookings </h2>
      <% if @bookings.any? do |booking| %>
        <% booking.state == 1 %>
      <% end %>
      <% @bookings.each do |booking| %>
        <%= render "booking_dashboard_card_customer", booking: booking %>
        <% end %>
        <% else %>
        <h6> You have no evaluated bookings at this time. </h6>
    <% end %>

<h2> Rejected Bookings </h2>
      <% if @bookings.any? do |booking| %>
        <% booking.state == -1 %>
      <% end %>
      <% @bookings.each do |booking| %>
        <%= render "booking_dashboard_card_customer", booking: booking %>
        <% end %>
        <% else %>
        <h6> You have no rejected bookings at this time. </h6>
    <% end %>
  <%= link_to "Find an expert", services_path, class: "link" %>
<% end %>
