<% if @message %>
  <h3> <%= @message %> </h3>
  <%= link_to "Find an expert", services_path, class: "link" %>
<% else %>
  <% @bookings = @bookings.sort_by {|obj| obj.date } %>
  <% pending = @bookings.select do |booking| %>
    <% booking.state == 0 %>
  <% end %>
  <% confirmed = @bookings.select do |booking| %>
    <% booking.state == 1 %>
  <% end %>
  <% declined = @bookings.select do |booking| %>
    <% booking.state == -1 %>
  <% end %>

  <% if pending.any? %>
    <h2> Pending Bookings </h2>
    <% pending.each do |booking| %>
      <%= render "booking_dashboard_card_customer", booking: booking %>
    <% end %>
  <% end %>
  <% if confirmed.any? %>
    <h2> Confirmed Bookings </h2>
    <% confirmed.each do |booking| %>
      <%= render "booking_dashboard_card_customer", booking: booking %>
    <% end %>
  <% end %>
  <% if declined.any? %>
    <h2> Declined Bookings </h2>
    <% declined.each do |booking| %>
      <%= render "booking_dashboard_card_customer", booking: booking %>
    <% end %>
  <% end %>
  <%= link_to "Find an expert", services_path, class: "link" %>
<% end %>
