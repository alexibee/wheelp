<%# <%= javascript_pack_tag 'booking_new' %>
<div class="new-booking">
  <h1> Details about the vehicle </h1>
  <p> This information about the vehicle will only be provided to the <mark>wheelper</mark>. </p>
  <div id='booking-form' data-controller="flatpickr-booking-form" data-flatpickr-booking-form-available-value="<%= @service.availability.to_json %>">
    <%= simple_form_for [@service, @booking] do |f| %>
      <%= f.input :vehicle_brand %>
      <%= f.input :vehicle_model %>
      <%= f.input :vehicle_address,
                  input_html: { data: { geocoder_target: "address" }, class: "d-none", id: "address-picker" },
                  wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }%>
      <%= f.input :vehicle_year %>
      <%= f.input :vehicle_contact %>
      <%= f.input :additional_details, as: :text %>
      <%= f.input :date, as: :date, html5: true, input_html: { data: { flatpickr_booking_form_target: "input"}, class: "date-picker"} %>
      <div class="button-position">
        <%= f.submit class: "cta-button" %>
      </div>
    <% end %>
  </div>
</div>
