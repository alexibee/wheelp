<%= link_to service_booking_path(@service, booking) do %>
  <div class="bookings-card expert", id="request-<%=booking.id%>">
    <img
    src="https://docs.arnoldrenderer.com//download/attachments/55708758/1-no-light-blocker.jpeg?api=v2"
    />
    <div class="info">
      <h5><%= booking.vehicle_brand.capitalize + " " + booking.vehicle_model.capitalize %></h5>
      <p>üìç <%= booking.vehicle_address %></p>
      <p> <%= booking.user.first_name.capitalize %> </p>
      <p> <%= booking.date.strftime("%e %b %y") %></p>
    </div>
    <div class="request-state-expert">
      <% if booking.state == 0 %>
        <h6 class="request-tag"> Request pending <h6>
        <div class="action-buttons">
          <%= link_to "Accept", booking_path(booking, state: 1), remote: true, method: :patch, class: "action-tag" %>
          <%= link_to "Decline", booking_path(booking, state: -1), remote: true, method: :patch, class: "decline-btn" %>
        </div>
      <% elsif booking.state == 1 && !booking.evaluation %>
        <h6 class="request-tag"> Awaiting evaluation </h6>
        <%= link_to "Add evaluation", new_booking_evaluation_path(booking), class: "action-tag" %>
      <% elsif booking.state == 1 && booking.evaluation %>
        <h6> Evaluation completed </h6>
        <%= link_to "See evaluation", booking_evaluation_path(booking, booking.evaluation) %>
      <% end %>
    </div>
  </div>
<% end %>
