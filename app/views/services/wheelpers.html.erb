
<%= simple_form_for :search, method: "GET", html: { class: 'mt-3' } do |f| %>
<%= f.input :search_info, placeholder: 'Search by keyword or category', label:false, input_html: {value: ""} %>
<%= f.submit "Search", class: "cta-button", id:"search" %>
<% end %>

<h2> Browse all our wheelpers </h2>
<div class="container">
  <% if @services.empty? %>
    <h3> <%= @message %> </h3>
  <% else %>

  <div class="cards-grid">
    <% @services.each do |service| %>

      <div class="vertical-card">
        <% total = 0 %>
        <% service.bookings.each do |book| %>
          <% total += book.review ? book.review.rating : 0 %>
        <% end %>
        <% if service.bookings.count > 0 %>
          <%= total/service.bookings.count %>
        <% end %>
        <div class="badge"> ★ 4.3</div>
        <div class="product-image">
          <% if service.photo.attached? %>
            <%= cl_image_tag service.photo.key, height: 150, width: 150, crop: :fill %>
          <% else %>
            <img src="https://media.wired.com/photos/5c54ee6a4feec32ca0f590d8/125:94/w_1761,h_1324,c_limit/superman-922909434.jpg" />
          <% end %>
        </div>
        <div class="product-details">
          <span class="product-category"> category </span>
          <h4> <%= service.user.first_name  %> <%= service.user.last_name  %> </h4>
          <p> <%= service.bio %></p>
          <div class="product-bottom-details">
            <p> from £<%= service.price %></p>
            <div class="product-links">
              <%= link_to "See more", service_path(service) %>
            </div>
    <% end %>
  <% end %>
</div>
